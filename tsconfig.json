{
    "compilerOptions": {
        "outDir": "./dist/ts",
        "module": "commonjs",
        "rootDir": "src",
        "target": "es2015",
        "jsx": "react",
        "noImplicitAny": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "scripts",
        "tests"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./lib/types"
    ],
    "types": [
        "nodegit"
    ]
}